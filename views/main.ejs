<%- include('_header.ejs') -%>
<section class="col-xs-12">
      <table class="table table-bordered" style="text-align: center;">
          <thead class="thead-dark">
            <tr>
              <th scope="col">No</th>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">Author</th>
              <th scope="col">Email</th>
              <th scope="col">Date</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
            <tr>
                  <th scope="row"><%= i + 1%></th>
                  <td><%= data[i].title%></td>
                  <td><%= data[i].description%></td>
                  <td><%= data[i].author%></td>
                  <td><%= data[i].email%></td>
                  <td><%= moment(data[i].createAt).format('LLLL')%></td>
                  <td>
                    <a href="/update/<%= data[i]._id%>"><button type="submit" class="btn btn-info">Update</button></a>
                  </td>
                  <td>
                    <form action="/delete/<%= data[i]._id%>" method="POST" onsubmit="return confirm('정말 삭제하시겠습니까?')">
                      <button type="submit" class="btn btn-danger" >Delete</button>
                    </form>
                  </td>
            </tr>
            <% } %>
          </tbody>
          <tr></tr>
      </table>      
      <div class= "mx-auto text-center">
        <a href="/insert"><button type="button" class="btn btn-primary">Create</button></a>
      </div>
</section>
<%- include('_footer.ejs') -%>