<%- include('_header.ejs') -%>
<div class="container">
  <div class="col-md-6 mx-auto text-center">
    <div class="header-title">
      <h1 class="wv-heading--title">Create</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="myform form ">
        <form action="/insertblog" method="POST">
          <div class="form-group">
            <input type="text" name="title" class="form-control my-input" id="titleInput" placeholder="Title">
          </div>
          <div class="form-group">
            <input type="text" name="author" class="form-control my-input" id="authorInput" placeholder="Author">
          </div>
          <div class="form-group">
            <input type="email" name="email" class="form-control my-input" id="emailInput" placeholder="Email">
          </div>
          <div class="form-group">
            <textarea class="form-control" id="descriptionInput" name="description" rows="3" placeholder="description"></textarea>
          </div>
          <div class= "mx-auto text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/main"><button type="button" class="btn btn-secondary">Cancel</button></a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('_footer.ejs') -%>