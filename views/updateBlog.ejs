<%- include('_header.ejs') -%>
<div class="container">
  <div class="col-md-6 mx-auto text-center">
    <div class="header-title">
      <h1 class="wv-heading--title">Upadte</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="myform form ">
        <form action="/updateBlog/<%= blogNumber %>" method="POST">
          <div class="form-group">
            <input type="text" name="blogNumber" class="form-control my-input" id="blogNumberInput" value="<%= blogNumber %>" disabled>
          </div>
          <div class="form-group">
            <input type="text" name="title" class="form-control my-input" id="titleInput" value="<%= data.title%>">
          </div>
          <div class="form-group">
            <textarea class="form-control" name="description" id="descriptionInput" rows="3"><%= data.desc%></textarea>
          </div>
          <div class= "mx-auto text-center">
            <button type="submit" class="btn btn-info">Update</button>
            <a href="/blog"><button type="button" class="btn btn-secondary">Cancel</button></a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('_footer.ejs') -%>